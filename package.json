{
  "name": "skittles",
  "version": "1.1.1",
  "description": "TypeScript to Solidity to EVM bytecode compiler",
  "type": "module",
  "main": "./dist/exports.js",
  "types": "./dist/exports.d.ts",
  "bin": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/exports.d.ts",
      "default": "./dist/exports.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "compile": "yarn build && node dist/index.js compile",
    "clean": "yarn build && node dist/index.js clean",
    "init": "yarn build && node dist/index.js init",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "yarn build && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chase-manning/skittles.git"
  },
  "author": "Chase Manning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chase-manning/skittles/issues"
  },
  "homepage": "https://github.com/chase-manning/skittles#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "figlet": "^1.10.0",
    "ora": "^5.0.0",
    "solc": "^0.8.33",
    "typescript": "^5.9.3",
    "yargs": "^17.0.0"
  },
  "peerDependencies": {
    "ethers": "^6.0.0",
    "hardhat": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "ethers": {
      "optional": true
    },
    "hardhat": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^25.2.3",
    "@types/yargs": "^17.0.35",
    "ethers": "^6.16.0",
    "hardhat": "^3.1.8",
    "tsx": "^4.21.0",
    "vitest": "^2.0.0"
  }
}
